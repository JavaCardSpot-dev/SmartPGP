  <patternset id="excluded.from.module.applet_main">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.applet_main">
    <patternset refid="excluded.from.module.applet_main"/>
  </patternset>
  
  <path id="applet_main.module.sourcepath">
    <dirset dir="${module.applet_main.basedir}/../../../applet/src/main">
      <include name="java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.applet_main" depends="compile.module.applet_main.production,compile.module.applet_main.tests" description="Compile module applet_main"/>
  
  <target name="compile.module.applet_main.production" depends="register.custom.compilers" description="Compile module applet_main; production classes">
    <mkdir dir="${applet_main.output.dir}"/>
    <javac2 destdir="${applet_main.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.applet_main}/javac">
      <compilerarg line="${compiler.args.applet_main}"/>
      <bootclasspath refid="applet_main.module.bootclasspath"/>
      <classpath refid="applet_main.module.production.classpath"/>
      <src refid="applet_main.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.applet_main"/>
    </javac2>
    
    <copy todir="${applet_main.output.dir}">
      <fileset dir="${module.applet_main.basedir}/../../../applet/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.applet_main.tests" depends="register.custom.compilers,compile.module.applet_main.production" description="compile module applet_main; test classes" unless="skip.tests"/>
  
  <target name="clean.module.applet_main" description="cleanup module">
    <delete dir="${applet_main.output.dir}"/>
    <delete dir="${applet_main.testoutput.dir}"/>
  </target>
</project>