    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.1.classpath"/>
  </path>
  
  <path id="applet_main.runtime.module.classpath">
    <pathelement location="${applet_main.output.dir}"/>
    <pathelement location="${basedir}/libs-sdks/jc304_kit/lib/api_classic.jar"/>
    <path refid="library.gradle:_net.sf.jopt-simple:jopt-simple:5.0.4.classpath"/>
    <path refid="library.gradle:_com.google.guava:guava:18.0.classpath"/>
