<?xml version="1.0" encoding="UTF-8"?>
<project name="module_applet" default="compile.module.applet">
  <dirname property="module.applet.basedir" file="${ant.file.module_applet}"/>
  
  <property name="module.jdk.home.applet" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.applet" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.applet" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.applet" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="applet.output.dir" value="${module.applet.basedir}/../../../classes/production/applet"/>
  <property name="applet.testoutput.dir" value="${module.applet.basedir}/../../../classes/test/applet"/>
  
  <path id="applet.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="applet.module.production.classpath">
    <path refid="${module.jdk.classpath.applet}"/>
  </path>
  
  <path id="applet.runtime.production.module.classpath">
    <pathelement location="${applet.output.dir}"/>
  </path>
  
  <path id="applet.module.classpath">
    <path refid="${module.jdk.classpath.applet}"/>
    <pathelement location="${applet.output.dir}"/>
  </path>
  
  <path id="applet.runtime.module.classpath">
    <pathelement location="${applet.testoutput.dir}"/>
    <pathelement location="${applet.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.applet">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.applet">
    <patternset refid="excluded.from.module.applet"/>
  </patternset>
  
  
  <target name="compile.module.applet" depends="compile.module.applet.production,compile.module.applet.tests" description="Compile module applet"/>
  
  <target name="compile.module.applet.production" depends="register.custom.compilers" description="Compile module applet; production classes"/>
  
  <target name="compile.module.applet.tests" depends="register.custom.compilers,compile.module.applet.production" description="compile module applet; test classes" unless="skip.tests"/>
  
  <target name="clean.module.applet" description="cleanup module">
    <delete dir="${applet.output.dir}"/>
    <delete dir="${applet.testoutput.dir}"/>
  </target>
</project>