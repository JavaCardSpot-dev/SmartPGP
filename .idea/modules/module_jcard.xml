<?xml version="1.0" encoding="UTF-8"?>
<project name="module_jcard" default="compile.module.jcard">
  <dirname property="module.jcard.basedir" file="${ant.file.module_jcard}"/>
  
  <property name="module.jdk.home.jcard" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.jcard" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.jcard" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.jcard" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="jcard.output.dir" value="${module.jcard.basedir}/../../classes/production/jcard"/>
  <property name="jcard.testoutput.dir" value="${module.jcard.basedir}/../../classes/test/jcard"/>
  
  <path id="jcard.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="jcard.module.production.classpath">
    <path refid="${module.jdk.classpath.jcard}"/>
  </path>
  
  <path id="jcard.runtime.production.module.classpath">
    <pathelement location="${jcard.output.dir}"/>
  </path>
  
  <path id="jcard.module.classpath">
    <path refid="${module.jdk.classpath.jcard}"/>
    <pathelement location="${jcard.output.dir}"/>
  </path>
  
  <path id="jcard.runtime.module.classpath">
    <pathelement location="${jcard.testoutput.dir}"/>
    <pathelement location="${jcard.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.jcard">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.jcard">
    <patternset refid="excluded.from.module.jcard"/>
  </patternset>
  
  
  <target name="compile.module.jcard" depends="compile.module.jcard.production,compile.module.jcard.tests" description="Compile module jcard"/>
  
  <target name="compile.module.jcard.production" depends="register.custom.compilers" description="Compile module jcard; production classes"/>
  
  <target name="compile.module.jcard.tests" depends="register.custom.compilers,compile.module.jcard.production" description="compile module jcard; test classes" unless="skip.tests"/>
  
  <target name="clean.module.jcard" description="cleanup module">
    <delete dir="${jcard.output.dir}"/>
    <delete dir="${jcard.testoutput.dir}"/>
  </target>
</project>